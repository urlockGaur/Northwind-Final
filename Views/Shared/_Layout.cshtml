<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Northwind</title>
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Fjalla+One" rel="stylesheet">
    <!-- bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- client -->
    <link rel="stylesheet" href="~/client.css" />
</head>
<body>
    <nav class="navbar navbar-expand-md bg-primary-subtle">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="bi bi-compass"></i> Northwind</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
            <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-database"></i> Products
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Product" asp-action="Category"><i class="bi bi-list"></i> Browse Categories</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-search"></i> Product Search</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-tags"></i> Current Discounts</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-people"></i> Customers</a>
                    </a>
                    <ul class="dropdown-menu">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                      {
                        if (User.IsInRole("northwind-customer"))
                        {
                          <li><a class="dropdown-item" asp-controller="Customer" asp-action="Account"><i class="bi bi-person"></i> Account</a></li>
                        }
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-door-closed"></i> Sign Out</a></li>
                      } else {
                        <li><a class="dropdown-item" asp-controller="Customer" asp-action="Register"><i class="bi bi-person-add"></i> Register</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login"><i class="bi bi-door-open"></i> Sign in</a></li>
                      }
                    </ul>
                </li>
            </ul>
            <!--cart button-->
            <div class="cart-indicator">
                <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#checkoutCartModal">
                    <i class="bi bi-cart3"></i> Cart (<span id="cart-count">0</span>)
                </button>
            </div>
           @if (User?.Identity?.IsAuthenticated ?? false)
            {
              <a class="nav-link d-flex" asp-controller="Account" asp-action="Logout"><i class="bi bi-door-closed"></i> Sign Out</a>
            }
            else
            {
              <a class="nav-link diflex" asp-controller="Account" asp-action="Login"><i class="bi bi-door-open"></i> Sign In</a>
            }
            
            </div>
        </div>
        </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2024 - Northwind
        </div>
    </footer>
    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
